{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "commonjs": true
  },

  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "react/prop-types": 0,
    "linebreak-style": 1,
    "quotes": "off",
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": false }]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
